<!DOCTYPE html>
<html>
  <head>
    <title>Doctors List</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
  </head>
  <body>
    <h1>Doctors List</h1>
    <a href="/doctors/add">Add New Doctor</a>
    <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Specialization</th>
        <th>Contact Number</th>
        <th>Actions</th>
      </tr>
      <% doctors.forEach(doctor => { %>
      <tr>
        <td><%= doctor.FirstName %></td>
        <td><%= doctor.LastName %></td>
        <td><%= doctor.Specialization %></td>
        <td><%= doctor.ContactNumber %></td>
        <td>
          <a href="/doctors/edit/<%= doctor.DoctorID %>">Edit</a>
          <a href="/doctors/delete/<%= doctor.DoctorID %>">Delete</a>
        </td>
      </tr>
      <% }); %>
    </table>
  </body>
</html>
